<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/note_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="note_id: " />

    <TextView
        android:id="@+id/note_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/note_id_text"
        android:layout_toEndOf="@+id/note_id_text"
        android:text="13" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/note_id_text"
        android:layout_toEndOf="@+id/note_id_text"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="status: "/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/status_text"
        android:layout_toEndOf="@+id/status_text"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="100"/>

    <TextView
        android:id="@+id/uuid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_id"
        android:text="uuid: "/>

    <TextView
        android:id="@+id/uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_id"
        android:layout_toRightOf="@+id/uuid_text"
        android:layout_toEndOf="@+id/uuid_text"
        android:text="assd sasd asdd asdd"/>

    <TextView
        android:id="@+id/note_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uuid"
        android:text="title: "/>

    <TextView
        android:id="@+id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uuid"
        android:layout_toRightOf="@+id/note_title_text"
        android:layout_toEndOf="@+id/note_title_text"
        android:textColor="#000"
        android:text="title title"/>

    <TextView
        android:id="@+id/note_text_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_title_text"
        android:text="text: "/>

    <TextView
        android:id="@+id/note_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_title_text"
        android:layout_toRightOf="@+id/note_text_text"
        android:layout_toEndOf="@+id/note_text_text"
        android:textColor="#000"
        android:text="text text text"/>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_text_text"
        android:text="date: "/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_text_text"
        android:layout_toRightOf="@+id/date_text"
        android:layout_toEndOf="@+id/date_text"
        android:text="09/11/2017-01:02"/>

</RelativeLayout>